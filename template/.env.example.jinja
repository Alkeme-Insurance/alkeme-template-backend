# {{ project_name }} - Environment Variables

# ============================================================================
# MongoDB Connection
# ============================================================================

# Local Development (Docker Compose)
MONGODB_URI=mongodb://mongodb:27017/{{ package_name }}

# Azure Cosmos DB (Production)
# MONGODB_URI=mongodb://your-cosmos-account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@your-cosmos-account@
{% if use_azure_auth %}
# ============================================================================
# Azure AD Authentication
# ============================================================================

AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-secret-here
OPENAPI_CLIENT_ID=your-client-id-here
{% endif %}
# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ============================================================================
# Development Settings
# ============================================================================

# Set to true to disable authentication for local development
DEV_NO_AUTH=true

# Docker port mapping (host:container)
DOCKER_PORT=8000
